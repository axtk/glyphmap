{
  "name": "glyphmap",
  "version": "0.2.0",
  "description": "Custom transliteration converter",
  "main": "dist/index.js",
  "bin": {
    "glyphmap": "dist/cli.js"
  },
  "scripts": {
    "build": "npx npm-run-all dist:clean dist:build dist:cli",
    "dist:build": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "dist:cli": "npx esbuild cli/index.ts --bundle --outdir=dist --platform=node",
    "dist:clean": "node -e \"require('node:fs').rmSync('dist', {force: true, recursive: true});\"",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all typecheck build",
    "test": "npx npm-run-all build test:build test:run",
    "test:build": "npx esbuild test.ts --bundle --outdir=dist --platform=node",
    "test:run": "node dist/test.js",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axtk/glyphmap.git"
  },
  "keywords": [
    "transliteration",
    "translit",
    "romanization"
  ],
  "author": "axtk",
  "license": "ISC",
  "devDependencies": {
    "@types/node": ">10",
    "typescript": "^5.9.2"
  }
}
