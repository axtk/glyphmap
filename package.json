{
  "name": "glyphmap",
  "version": "0.1.0",
  "description": "Custom transliteration converter",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all -s dist:clean dist:build",
    "dist:build": "esbuild index.ts --bundle --outfile=dist/index.js",
    "dist:clean": "node -e \"require('fs').rmSync('dist', {force: true, recursive: true});\"",
    "prepublishOnly": "npm run build",
    "test": "npm-run-all -s build test:build test:run",
    "test:build": "esbuild test.ts --bundle --outfile=dist/test.js",
    "test:run": "node dist/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axtk/glyphmap.git"
  },
  "keywords": [
    "transliteration",
    "translit",
    "romanization"
  ],
  "author": "axtk",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.17.18",
    "npm-run-all": "^4.1.5"
  }
}
